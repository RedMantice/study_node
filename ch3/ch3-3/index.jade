doctype
html
  head
    meta(charset="utf-8")
    title サンプルページ
    link(rel="stylesheet",href="style.css")
  body
    h1= title
    if form != null
      -myname = form.myname
      -mail = form.mail
      -age = form.age
      p= 'send: ' + myname + '.' + age
    else
      p= msg
    form(method='post',action='/')
      table
        tr
          td
            input(type='text',name='myname',value=myname)
        tr
          td
            input(type='text',name='mail',value=mail)
        tr
          td
            input(type='text',name='age',value=age)
        tr
          td
            input(type='submit')
    table
      for item,index in datas
        tr
          td= index + 1
          td= item.myname
          td= item.mail
          td= item.age
